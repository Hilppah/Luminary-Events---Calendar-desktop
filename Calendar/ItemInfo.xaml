<Window x:Class="Calendar.ItemInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="ItemInfo" Height="450" Width="800">
    <Grid>
        <ListView x:Name="infoList" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="310">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Kalusto" Width="200"/>
                    <GridViewColumn Header="KPL" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Extra Info 1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                    <TextBlock Text="Extra Info 2" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>

</Window>
